<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Validation Runs - TrueLens</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #ffe600;">
      <div class="container-fluid">
        <a class="navbar-brand fw-bold text-dark" href="/"><i class="bi bi-check-circle-fill"></i> TrueLens</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item"><a class="nav-link text-dark" href="/upload"><i class="bi bi-upload"></i> Upload</a></li>
            <li class="nav-item"><a class="nav-link text-dark" href="/providers"><i class="bi bi-people-fill"></i> Providers</a></li>
            <li class="nav-item"><a class="nav-link text-dark active" href="/runs"><i class="bi bi-play-circle-fill"></i> Runs</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <main class="container py-5">
      <div class="row mb-4">
        <div class="col">
          <h1 class="display-5 fw-bold"><i class="bi bi-play-circle"></i> Validation Runs</h1>
          <p class="text-muted">View and manage all provider validation workflows</p>
        </div>
        <div class="col-auto">
          <button id="startRun" class="btn btn-success btn-lg shadow">
            <i class="bi bi-play-fill"></i> Start New Run
          </button>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-body">
          <% if (typeof runs !== 'undefined' && runs && runs.length) { %>
            <div class="table-responsive">
              <table class="table table-hover align-middle">
                <thead class="table-light">
                  <tr>
                    <th style="width: 20%;">Run ID</th>
                    <th>Started</th>
                    <th class="text-center">Total</th>
                    <th class="text-center">Processed</th>
                    <th class="text-center">Success</th>
                    <th class="text-center">Needs Review</th>
                    <th>Completed</th>
                    <th class="text-end">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% runs.forEach(function(r){ %>
                    <tr>
                      <td><code class="small"><%= r.id.substring(0, 8) %>...</code></td>
                      <td><%= r.started_at ? new Date(r.started_at).toLocaleString() : '—' %></td>
                      <td class="text-center"><span class="badge bg-info"><%= r.total_providers ?? '—' %></span></td>
                      <td class="text-center"><span class="badge bg-secondary"><%= r.processed ?? '—' %></span></td>
                      <td class="text-center"><span class="badge bg-success"><%= r.success_count ?? '—' %></span></td>
                      <td class="text-center">
                        <% if (r.needs_review_count > 0) { %>
                          <span class="badge bg-warning text-dark"><%= r.needs_review_count %></span>
                        <% } else { %>
                          <span class="badge bg-light text-dark">0</span>
                        <% } %>
                      </td>
                      <td>
                        <% if (r.completed_at) { %>
                          <small class="text-muted"><%= new Date(r.completed_at).toLocaleString() %></small>
                        <% } else { %>
                          <span class="badge bg-primary">Running</span>
                        <% } %>
                      </td>
                      <td class="text-end">
                        <div class="btn-group" role="group">
                          <% if (r.needs_review_count > 0) { %>
                            <button class="btn btn-sm btn-outline-info view-issues-btn" data-run-id="<%= r.id %>">
                              <i class="bi bi-eye"></i> Issues
                            </button>
                          <% } %>
                          <button class="btn btn-sm btn-outline-danger delete-run-btn" data-run-id="<%= r.id %>">
                            <i class="bi bi-trash"></i>
                          </button>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="text-center py-5">
              <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
              <h4 class="mt-3 text-muted">No validation runs yet</h4>
              <p class="text-muted">Upload providers or add by NPI to start a validation run</p>
              <a href="/upload" class="btn btn-primary mt-3">
                <i class="bi bi-upload"></i> Go to Upload
              </a>
            </div>
          <% } %>
        </div>
      </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/runs.js"></script>
  </body>
</html>
