<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Validation Runs - Validex</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
  <div class="dashboard-layout">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <a href="/" class="sidebar-logo">
          <i class="bi bi-check-circle-fill"></i>
          <span>Validex</span>
        </a>
      </div>
      <nav class="sidebar-nav">
        <div class="nav-section">
          <div class="nav-section-title">Main</div>
          <a href="/" class="nav-item">
            <i class="bi bi-grid-fill"></i>
            <span>Dashboard</span>
          </a>
          <a href="/upload" class="nav-item">
            <i class="bi bi-cloud-arrow-up"></i>
            <span>Upload</span>
          </a>
        </div>
        <div class="nav-section">
          <div class="nav-section-title">Data</div>
          <a href="/providers" class="nav-item">
            <i class="bi bi-people-fill"></i>
            <span>Providers</span>
          </a>
          <a href="/runs" class="nav-item active">
            <i class="bi bi-play-circle-fill"></i>
            <span>Validation Runs</span>
          </a>
        </div>
      </nav>
    </aside>

    <!-- Main Content -->
    <div class="main-content">
      <!-- Top Bar -->
      <div class="topbar">
        <div class="topbar-left">
          <div>
            <div class="topbar-title">Validation Runs</div>
          </div>
        </div>
        <div class="topbar-right">
          <button id="startRun" class="btn btn-primary">
            <i class="bi bi-play-fill"></i> Start Validation Run
          </button>
          <div class="topbar-time">
            <i class="bi bi-clock"></i> <span id="currentTime"></span>
          </div>
        </div>
      </div>

      <!-- Content Area -->
      <div class="content-area">
        <div class="card">
          <div class="card-header">
            <div class="card-title">
              <i class="bi bi-play-circle-fill"></i>
              All Validation Runs
            </div>
          </div>
          <div class="card-body">
            <% if (typeof runs !== 'undefined' && runs && runs.length) { %>
              <table>
                <thead>
                  <tr>
                    <th>Run ID</th>
                    <th>Started</th>
                    <th>Total</th>
                    <th>Processed</th>
                    <th>Success</th>
                    <th>Needs Review</th>
                    <th>Completed</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% runs.forEach(function(r){ %>
                    <tr>
                      <td><code><%= r.id.substring(0, 8) %>...</code></td>
                      <td><%= r.started_at ? new Date(r.started_at).toLocaleString() : '—' %></td>
                      <td><span class="badge badge-info"><%= r.total_providers ?? '—' %></span></td>
                      <td><span class="badge"><%= r.processed ?? '—' %></span></td>
                      <td><span class="badge badge-success"><%= r.success_count ?? '—' %></span></td>
                      <td>
                        <% if (r.needs_review_count > 0) { %>
                          <span class="badge" style="background-color: #ffc107; color: #333; font-weight: 600;"><%= r.needs_review_count %></span>
                        <% } else { %>
                          <span class="badge">0</span>
                        <% } %>
                      </td>
                      <td>
                        <% if (r.completed_at) { %>
                          <%= new Date(r.completed_at).toLocaleString() %>
                        <% } else { %>
                          <span class="badge badge-info">Running</span>
                        <% } %>
                      </td>
                      <td>
                        <div style="display: flex; gap: 8px; align-items: center;">
                          <% if (r.completed_at) { %>
                            <% const startTime = new Date(r.started_at).getTime(); %>
                            <% const endTime = new Date(r.completed_at).getTime(); %>
                            <% const totalSeconds = Math.round((endTime - startTime) / 1000); %>
                            <% const mins = Math.floor(totalSeconds / 60); %>
                            <% const secs = totalSeconds % 60; %>
                            <span style="background: #f0f0f0; padding: 4px 12px; border-radius: 6px; font-size: 0.875rem; font-weight: 600;">
                              Time Taken: <%= mins > 0 ? mins + 'm ' + secs + 's' : secs + 's' %>
                            </span>
                          <% } %>
                          <% if (r.needs_review_count > 0) { %>
                            <button class="btn btn-secondary btn-sm view-issues-btn" data-run-id="<%= r.id %>">
                              <i class="bi bi-eye"></i> Issues
                            </button>
                          <% } %>
                          <button class="btn btn-danger btn-sm delete-run-btn" data-run-id="<%= r.id %>">
                            <i class="bi bi-trash"></i>
                          </button>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            <% } else { %>
              <div class="empty-state">
                <div class="empty-icon">
                  <i class="bi bi-inbox"></i>
                </div>
                <div class="empty-title">No validation runs yet</div>
                <div class="empty-text">Upload providers or add by NPI to start a validation run</div>
                <a href="/upload" class="btn btn-primary mt-3">
                  <i class="bi bi-upload"></i> Go to Upload
                </a>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/js/runs.js"></script>
  <script>
    // Update time
    function updateTime() {
      const now = new Date();
      const timeStr = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
      document.getElementById('currentTime').textContent = timeStr;
    }
    updateTime();
    setInterval(updateTime, 60000);
  </script>
</body>
</html>
