<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Provider by NPI - TrueLens</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <style>
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .add-provider-card {
      background: white;
      border-radius: 15px;
      box-shadow: 0 10px 40px rgba(0,0,0,0.2);
      max-width: 600px;
      width: 100%;
      margin: 20px;
    }
    .card-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border-radius: 15px 15px 0 0 !important;
      padding: 25px;
    }
    .npi-input {
      font-size: 1.2rem;
      padding: 15px;
      text-align: center;
      letter-spacing: 2px;
      font-family: 'Courier New', monospace;
    }
    .btn-add-provider {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border: none;
      padding: 15px 40px;
      font-size: 1.1rem;
      font-weight: 600;
      letter-spacing: 1px;
    }
    .btn-add-provider:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
    }
    .alert {
      border-radius: 10px;
    }
    .info-section {
      background: #f8f9fa;
      border-radius: 10px;
      padding: 20px;
      margin-top: 20px;
    }
    .loading-spinner {
      display: none;
    }
    .loading-spinner.active {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }
  </style>
</head>
<body>
  <div class="add-provider-card">
    <div class="card-header">
      <h2 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i>Add Provider by NPI</h2>
      <p class="mb-0 mt-2 opacity-75">Enter a 10-digit NPI to fetch and validate provider information</p>
    </div>
    <div class="card-body p-4">
      
      <form id="addProviderForm">
        <div class="mb-4">
          <label for="npiInput" class="form-label fw-bold">NPI Number</label>
          <input 
            type="text" 
            class="form-control npi-input" 
            id="npiInput" 
            placeholder="1234567890" 
            maxlength="10"
            pattern="[0-9]{10}"
            required
          >
          <div class="form-text">Enter exactly 10 digits</div>
        </div>

        <div class="d-grid">
          <button type="submit" class="btn btn-primary btn-add-provider">
            <i class="bi bi-search me-2"></i>Fetch & Validate Provider
          </button>
        </div>
      </form>

      <div class="loading-spinner" id="loadingSpinner">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
        <span class="ms-3">Fetching provider data and starting validation...</span>
      </div>

      <div id="alertContainer" class="mt-4"></div>

      <div class="info-section">
        <h6 class="fw-bold mb-3"><i class="bi bi-info-circle me-2"></i>What happens next?</h6>
        <ol class="mb-0">
          <li class="mb-2">Provider details are fetched from NPI Registry</li>
          <li class="mb-2">Provider record is created in TrueLens database</li>
          <li class="mb-2">Full validation workflow runs automatically:
            <ul>
              <li>NPI data validation</li>
              <li>Azure Maps address verification</li>
              <li>Web scraping for additional information</li>
              <li>Quality assurance checks</li>
            </ul>
          </li>
          <li class="mb-2">Admin email summary sent to <strong>gurumaujsatsangi@gmail.com</strong></li>
          <li>If discrepancies found, provider receives verification email</li>
        </ol>
      </div>

      <div class="mt-4 text-center">
        <a href="/" class="btn btn-outline-secondary">
          <i class="bi bi-arrow-left me-2"></i>Back to Home
        </a>
      </div>

    </div>
  </div>

  <script>
    const form = document.getElementById('addProviderForm');
    const npiInput = document.getElementById('npiInput');
    const alertContainer = document.getElementById('alertContainer');
    const loadingSpinner = document.getElementById('loadingSpinner');

    // Format NPI input (digits only)
    npiInput.addEventListener('input', (e) => {
      e.target.value = e.target.value.replace(/\D/g, '');
    });

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const npi = npiInput.value.trim();
      
      if (npi.length !== 10) {
        showAlert('danger', 'Please enter exactly 10 digits');
        return;
      }

      // Clear previous alerts
      alertContainer.innerHTML = '';
      
      // Show loading
      loadingSpinner.classList.add('active');
      form.querySelector('button[type="submit"]').disabled = true;

      try {
        const response = await fetch('/api/providers/add-by-npi', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ npi })
        });

        const data = await response.json();

        loadingSpinner.classList.remove('active');
        form.querySelector('button[type="submit"]').disabled = false;

        if (response.ok && data.success) {
          showAlert('success', `
            <strong>Success!</strong> Provider "${escapeHtml(data.providerName)}" has been added.<br>
            <small>Provider ID: ${escapeHtml(data.providerId)}</small><br>
            <small>NPI: ${escapeHtml(data.npi)}</small><br><br>
            <strong>Validation is running...</strong><br>
            An email summary will be sent to <strong>gurumaujsatsangi@gmail.com</strong> when complete.
          `);
          npiInput.value = '';
          
          // Add link to view provider
          setTimeout(() => {
            const viewLink = document.createElement('a');
            viewLink.href = `/provider/${data.providerId}`;
            viewLink.className = 'btn btn-sm btn-primary mt-2';
            viewLink.innerHTML = '<i class="bi bi-eye me-2"></i>View Provider Details';
            alertContainer.querySelector('.alert').appendChild(viewLink);
          }, 500);
          
        } else if (response.status === 409) {
          // Provider already exists
          showAlert('warning', `
            <strong>Provider Already Exists</strong><br>
            Provider "${escapeHtml(data.providerName)}" with NPI ${npi} is already in the system.<br>
            <a href="/provider/${data.providerId}" class="alert-link">View existing provider</a>
          `);
        } else {
          showAlert('danger', `<strong>Error:</strong> ${escapeHtml(data.error || 'Failed to add provider')}`);
        }

      } catch (err) {
        console.error('Error:', err);
        loadingSpinner.classList.remove('active');
        form.querySelector('button[type="submit"]').disabled = false;
        showAlert('danger', '<strong>Network Error:</strong> Failed to connect to server. Please try again.');
      }
    });

    function showAlert(type, message) {
      alertContainer.innerHTML = `
        <div class="alert alert-${type} alert-dismissible fade show" role="alert">
          ${message}
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      `;
    }

    function escapeHtml(text) {
      const map = {
        '&': '&amp;',
        '<': '&lt;',
        '>': '&gt;',
        '"': '&quot;',
        "'": '&#039;'
      };
      return String(text || '').replace(/[&<>"']/g, m => map[m]);
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
