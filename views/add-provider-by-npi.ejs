<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Provider by NPI - Validex</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
  <div class="dashboard-layout">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <a href="/" class="sidebar-logo">
          <i class="bi bi-check-circle-fill"></i>
          <span>Validex</span>
        </a>
      </div>
      <nav class="sidebar-nav">
        <div class="nav-section">
          <div class="nav-section-title">Main</div>
          <a href="/" class="nav-item">
            <i class="bi bi-grid-fill"></i>
            <span>Dashboard</span>
          </a>
          <a href="/upload" class="nav-item active">
            <i class="bi bi-cloud-arrow-up"></i>
            <span>Upload</span>
          </a>
        </div>
        <div class="nav-section">
          <div class="nav-section-title">Data</div>
          <a href="/providers" class="nav-item">
            <i class="bi bi-people-fill"></i>
            <span>Providers</span>
          </a>
          <a href="/runs" class="nav-item">
            <i class="bi bi-play-circle-fill"></i>
            <span>Validation Runs</span>
          </a>
        </div>
      </nav>
    </aside>

    <!-- Main Content -->
    <div class="main-content">
      <!-- Top Bar -->
      <div class="topbar">
        <div class="topbar-left">
          <div>
            <div class="topbar-title">Add Provider by NPI</div>
            <div class="topbar-subtitle">Fetch and validate provider from NPI Registry</div>
          </div>
        </div>
        <div class="topbar-right">
          <a href="/upload" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Upload
          </a>
          <div class="topbar-time">
            <i class="bi bi-clock"></i> <span id="currentTime"></span>
          </div>
        </div>
      </div>

      <!-- Content Area -->
      <div class="content-area">
        <div style="max-width: 800px; margin: 0 auto;">
          <!-- NPI Form Card -->
          <div class="card">
            <div class="card-header">
              <div class="card-title">
                <i class="bi bi-person-plus-fill"></i>
                Enter NPI Number
              </div>
            </div>
            <div class="card-body">
              <form id="addProviderForm">
                <div class="form-group">
                  <label for="npiInput">NPI Number</label>
                  <input 
                    type="text" 
                    class="form-control" 
                    id="npiInput" 
                    placeholder="1234567890" 
                    maxlength="10"
                    pattern="[0-9]{10}"
                    required
                    style="font-size: 1.2rem; text-align: center; letter-spacing: 2px; font-family: 'Courier New', monospace;"
                  >
                  <div class="form-text">Enter exactly 10 digits</div>
                </div>

                <button type="submit" class="btn btn-primary btn-lg" style="width: 100%;">
                  <i class="bi bi-search"></i> Fetch & Validate Provider
                </button>
              </form>

              <div class="loading-spinner" id="loadingSpinner" style="display: none; padding: 20px;">
                <div class="spinner"></div>
                <span style="margin-left: 12px; color: var(--text-secondary);">Fetching provider data and starting validation...</span>
              </div>

              <div id="alertContainer" style="margin-top: 20px;"></div>
            </div>
          </div>

          <!-- Info Card -->
          <div class="card">
            <div class="card-header">
              <div class="card-title">
                <i class="bi bi-info-circle-fill"></i>
                What happens next?
              </div>
            </div>
            <div class="card-body">
              <ol style="margin-left: 20px;">
                <li style="margin-bottom: 12px;">Provider details are fetched from NPI Registry</li>
                <li style="margin-bottom: 12px;">Provider record is created in Validex database</li>
                <li style="margin-bottom: 12px;">Full validation workflow runs automatically:
                  <ul style="margin-top: 8px;">
                    <li>NPI data validation</li>
                    <li>Azure Maps address verification</li>
                    <li>Web scraping for additional information</li>
                    <li>Quality assurance checks</li>
                  </ul>
                </li>
                <li style="margin-bottom: 12px;">Admin email summary sent to <strong>gurumaujsatsangi@gmail.com</strong></li>
                <li>If discrepancies found, provider receives verification email</li>
              </ol>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Update time
    function updateTime() {
      const now = new Date();
      const timeStr = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
      document.getElementById('currentTime').textContent = timeStr;
    }
    updateTime();
    setInterval(updateTime, 60000);

    const form = document.getElementById('addProviderForm');
    const npiInput = document.getElementById('npiInput');
    const alertContainer = document.getElementById('alertContainer');
    const loadingSpinner = document.getElementById('loadingSpinner');

    // Format NPI input (digits only)
    npiInput.addEventListener('input', (e) => {
      e.target.value = e.target.value.replace(/\D/g, '');
    });

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const npi = npiInput.value.trim();
      
      if (npi.length !== 10) {
        showAlert('danger', 'Please enter exactly 10 digits');
        return;
      }

      // Clear previous alerts
      alertContainer.innerHTML = '';
      
      // Show loading
      loadingSpinner.style.display = 'flex';
      form.querySelector('button[type="submit"]').disabled = true;

      try {
        const response = await fetch('/api/providers/add-by-npi', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ npi })
        });

        const data = await response.json();

        loadingSpinner.style.display = 'none';
        form.querySelector('button[type="submit"]').disabled = false;

        if (response.ok && data.success) {
          showAlert('success', `
            <strong>Success!</strong> Provider "${escapeHtml(data.providerName)}" has been added.<br>
            <div style="margin-top: 8px;">Provider ID: <code>${escapeHtml(data.providerId)}</code></div>
            <div>NPI: <code>${escapeHtml(data.npi)}</code></div>
            <div style="margin-top: 12px;"><strong>Validation is running...</strong></div>
            <div style="font-size: 0.875rem; margin-top: 4px;">An email summary will be sent to <strong>gurumaujsatsangi@gmail.com</strong> when complete.</div>
            <a href="/provider/${data.providerId}" class="btn btn-sm btn-info" style="margin-top: 12px;">
              <i class="bi bi-eye"></i> View Provider Details
            </a>
          `);
          npiInput.value = '';
          
        } else if (response.status === 409) {
          // Provider already exists
          showAlert('warning', `
            <strong>Provider Already Exists</strong><br>
            <div style="margin-top: 8px;">Provider "${escapeHtml(data.providerName)}" with NPI ${npi} is already in the system.</div>
            <a href="/provider/${data.providerId}" class="btn btn-sm btn-info" style="margin-top: 12px;">
              <i class="bi bi-eye"></i> View Existing Provider
            </a>
          `);
        } else {
          showAlert('danger', `<strong>Error:</strong> ${escapeHtml(data.error || 'Failed to add provider')}`);
        }

      } catch (err) {
        console.error('Error:', err);
        loadingSpinner.style.display = 'none';
        form.querySelector('button[type="submit"]').disabled = false;
        showAlert('danger', '<strong>Network Error:</strong> Failed to connect to server. Please try again.');
      }
    });

    function showAlert(type, message) {
      alertContainer.innerHTML = `
        <div class="alert alert-${type}">
          <i class="bi bi-${type === 'success' ? 'check-circle-fill' : type === 'warning' ? 'exclamation-triangle-fill' : 'exclamation-circle-fill'}"></i>
          <div style="flex: 1;">${message}</div>
        </div>
      `;
    }

    function escapeHtml(text) {
      const map = {
        '&': '&amp;',
        '<': '&lt;',
        '>': '&gt;',
        '"': '&quot;',
        "'": '&#039;'
      };
      return String(text || '').replace(/[&<>"']/g, m => map[m]);
    }
  </script>
</body>
</html>
