<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Provider Details - TrueLens</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.min.css" rel="stylesheet">
  <link href="/css/dashboard.css" rel="stylesheet">
</head>
<body>
  <div class="dashboard-layout">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <a href="/" class="sidebar-logo">
          <i class="bi bi-check-circle-fill"></i>
          <span>TrueLens</span>
        </a>
      </div>
      <nav class="sidebar-nav">
        <div class="nav-section">
          <div class="nav-section-title">Main</div>
          <a href="/" class="nav-item">
            <i class="bi bi-grid-fill"></i>
            <span>Dashboard</span>
          </a>
          <a href="/upload" class="nav-item">
            <i class="bi bi-cloud-arrow-up"></i>
            <span>Upload</span>
          </a>
        </div>
        <div class="nav-section">
          <div class="nav-section-title">Data</div>
          <a href="/providers" class="nav-item active">
            <i class="bi bi-people-fill"></i>
            <span>Providers</span>
          </a>
          <a href="/runs" class="nav-item">
            <i class="bi bi-play-circle-fill"></i>
            <span>Validation Runs</span>
          </a>
        </div>
      </nav>
    </aside>

    <!-- Main Content -->
    <div class="main-content">
      <!-- Top Bar -->
      <div class="topbar">
        <div class="topbar-left">
          <div>
            <div class="topbar-title">Provider Details</div>
            <div class="topbar-subtitle">Complete provider information and validation status</div>
          </div>
        </div>
        <div class="topbar-right">
          <a href="/providers" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
          </a>
          <div class="topbar-time">
            <i class="bi bi-clock"></i> <span id="currentTime"></span>
          </div>
        </div>
      </div>

      <!-- Content Area -->
      <div class="content-area">
        <!-- Provider Details Card -->
        <div class="card mb-4">
          <div class="card-header">
            <div class="card-title">
              <i class="bi bi-info-circle-fill"></i>
              Provider Information
            </div>
          </div>
          <div class="card-body">
            <div id="detailsSpinner" class="text-center">
              <div class="spinner"></div>
            </div>
            <table id="providerDetailsTbl" style="display: none; width: 100%;">
              <tbody>
                <!-- Populated by JavaScript -->
              </tbody>
            </table>
          </div>
        </div>

        <!-- Validation Issues Card -->
        <div class="card">
          <div class="card-header">
            <div class="card-title">
              <i class="bi bi-exclamation-triangle-fill"></i>
              Validation Issues
            </div>
          </div>
          <div class="card-body">
            <div id="issuesSpinner" class="text-center">
              <div class="spinner"></div>
            </div>
            <table id="providerIssuesTbl" style="display: none;">
              <thead>
                <tr>
                  <th>Field</th>
                  <th>Current Value</th>
                  <th>Suggested Value</th>
                  <th>Confidence</th>
                  <th>Severity</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <!-- Populated by JavaScript -->
              </tbody>
            </table>
            <div id="noIssuesMsg" class="empty-state" style="display: none;">
              <div class="empty-icon">
                <i class="bi bi-check-circle-fill"></i>
              </div>
              <div class="empty-title">No Validation Issues</div>
              <div class="empty-text">This provider has passed all validation checks</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/provider.js"></script>
  <script>
    // Update time
    function updateTime() {
      const now = new Date();
      const timeStr = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
      document.getElementById('currentTime').textContent = timeStr;
    }
    updateTime();
    setInterval(updateTime, 60000);
  </script>
</body>
</html>
