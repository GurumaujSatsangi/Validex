<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cron Jobs - Validex</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
  <div class="dashboard-layout">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <a href="/" class="sidebar-logo">
          <i class="bi bi-check-circle-fill"></i>
          <span>Validex</span>
        </a>
      </div>
      <nav class="sidebar-nav">
        <div class="nav-section">
          <div class="nav-section-title">Main</div>
          <a href="/" class="nav-item">
            <i class="bi bi-grid-fill"></i>
            <span>Dashboard</span>
          </a>
          <a href="/upload" class="nav-item">
            <i class="bi bi-cloud-arrow-up"></i>
            <span>Upload</span>
          </a>
        </div>
        <div class="nav-section">
          <div class="nav-section-title">Data</div>
          <a href="/providers" class="nav-item">
            <i class="bi bi-people-fill"></i>
            <span>Providers</span>
          </a>
          <a href="/runs" class="nav-item active">
            <i class="bi bi-play-circle-fill"></i>
            <span>Validation Runs</span>
          </a>
        </div>
      </nav>
    </aside>

    <!-- Main Content -->
    <div class="main-content">
      <!-- Top Bar -->
      <div class="topbar">
        <div class="topbar-left">
          <div>
            <div class="topbar-title">Cron Jobs</div>
          </div>
        </div>
        <div class="topbar-right">
        
          <div class="topbar-time">
            <i class="bi bi-clock"></i> <span id="currentTime"></span>
          </div>
        </div>
      </div>

      <!-- Content Area -->
      <div class="content-area">
        <!-- Create Cron Job Form -->
        <div class="card" style="margin-bottom: 24px;">
          <div class="card-header">
            <div class="card-title">
              <i class="bi bi-calendar-event-fill"></i>
              Schedule a New Cron Job
            </div>
          </div>
          <div class="card-body">
            <form id="cronJobForm" method="POST" action="/api/cron-jobs">
              <div class="form-group" style="margin-bottom: 16px;">
                <label for="frequency" style="display: block; margin-bottom: 8px; font-weight: 600; color: #333;">Frequency</label>
                <select id="frequency" name="frequency" required style="width: 100%; padding: 10px 12px; border: 1px solid #d1d5db; border-radius: 6px; font-size: 1rem; background-color: #fff; cursor: pointer;">
                  <option value="">-- Select Frequency --</option>
                  <option value="0 * * * *">Hourly (every hour)</option>
                  <option value="0 0 * * *">Daily (every day at 12:00 AM IST)</option>
                  <option value="0 0 * * 0">Weekly (every Sunday at 12:00 AM IST)</option>
                  <option value="0 0 1 * *">Monthly (1st of every month at 12:00 AM IST)</option>
                  <option value="0 0 1 1 *">Yearly (first day of year at 12:00 AM IST)</option>
                </select>
              </div>
              <button type="submit" class="btn btn-primary" style="background-color: #007bff; color: #fff; padding: 10px 20px; border: none; border-radius: 6px; font-weight: 600; cursor: pointer;">
                <i class="bi bi-plus-circle"></i> Schedule Cron Job
              </button>
            </form>
          </div>
        </div>

        <div class="card">
          <div class="card-header">
            <div class="card-title">
              <i class="bi bi-play-circle-fill"></i>
              All Cron Jobs
            </div>
          </div>
          <div class="card-body">
            <% if (error) { %>
              <div class="empty-state" style="margin-bottom: 16px;">
                <div class="empty-title"><%= error %></div>
              </div>
            <% } %>
            <% if (crons && crons.length > 0) { %>
              <table>
                <thead>
                  <tr>
                    <th>Job ID</th>
                    <th>Created At</th>
                    <th>Expression</th>
                    <th>Frequency</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% crons.forEach(function(r){ %>
                    <tr>
                      <td><code><%= r.id %></code></td>
                      <td><%= r.created_at ? new Date(r.created_at).toLocaleString() : "-" %></td>
                      <td><code><%= r.expression || r.cron_expression || r.schedule || "-" %></code></td>
                      <td>
                        <% 
                          const expr = r.expression || r.cron_expression || r.schedule || '';
                          let freq = 'Unknown';
                          switch(expr) {
                            case '0 * * * *': freq = 'Hourly'; break;
                            case '0 0 * * *': freq = 'Daily'; break;
                            case '0 0 * * 0': freq = 'Weekly'; break;
                            case '0 0 1 * *': freq = 'Monthly'; break;
                            case '0 0 1 1 *': freq = 'Yearly'; break;
                          }
                        %>
                        <span class="badge" style="background-color: #6366f1; color: #fff;"><%= freq %></span>
                      </td>
                      <td>
                        <% const status = r.status || r.state || "ACTIVE"; %>
                        <% if (status === "SCHEDULED") { %>
                          <span class="badge" style="background-color: #ffc107; color: #333; font-weight: 600;"><%= status %></span>
                        <% } else if (status === "ACTIVE" || status === "RUNNING") { %>
                          <span class="badge" style="background-color: #198754; color: #fff; font-weight: 600;"><%= status %></span>
                        <% } else if (status === "FAILED" || status === "ERROR") { %>
                          <span class="badge" style="background-color: #dc3545; color: #fff; font-weight: 600;"><%= status %></span>
                        <% } else { %>
                          <span class="badge" style="background-color: #6c757d; color: #fff; font-weight: 600;"><%= status %></span>
                        <% } %>
                      </td>
                      <td>
                        <div style="display: flex; gap: 8px; align-items: center;">
                          <button class="btn btn-danger btn-sm delete-cron-btn" data-cron-id="<%= r.id %>">
                            <i class="bi bi-trash"></i> Delete
                          </button>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            <% } else { %>
              <div class="empty-state">
                <div class="empty-icon">
                  <i class="bi bi-inbox"></i>
                </div>
                <div class="empty-title">No Cron Jobs scheduled yet</div>
                <a href="/upload" class="btn btn-primary mt-3">
                  <i class="bi bi-calendar-check-fill"></i> Schedule
                </a>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    // Update time
    function updateTime() {
      const now = new Date();
      const timeStr = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
      document.getElementById('currentTime').textContent = timeStr;
    }
    updateTime();
    setInterval(updateTime, 60000);

    // Handle form submission
    document.getElementById('cronJobForm')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      try {
        const frequency = document.getElementById('frequency').value;
        if (!frequency) {
          Swal.fire('Error', 'Please select a frequency', 'error');
          return;
        }

        Swal.fire({
          title: 'Scheduling Cron Job',
          html: '<div class="spinner-border text-primary" role="status"><span class="visually-hidden">Scheduling...</span></div>',
          allowOutsideClick: false,
          showConfirmButton: false
        });

        const res = await fetch('/api/cron-jobs', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ frequency })
        });

        const json = await res.json();
        Swal.close();

        if (!res.ok) {
          Swal.fire('Error', json?.error || 'Failed to schedule cron job', 'error');
          return;
        }

        Swal.fire('Success', 'Cron job scheduled successfully!', 'success').then(() => {
          window.location.reload();
        });
      } catch (err) {
        Swal.close();
        Swal.fire('Error', err?.message || String(err), 'error');
      }
    });

    // Handle delete button clicks
    document.addEventListener('click', async (e) => {
      const deleteBtn = e.target.closest('.delete-cron-btn');
      if (!deleteBtn) return;

      const cronId = deleteBtn.dataset.cronId;
      const confirmed = await Swal.fire({
        icon: 'warning',
        title: 'Delete this cron job?',
        text: 'This action cannot be undone.',
        showCancelButton: true,
        confirmButtonText: 'Delete',
        cancelButtonText: 'Cancel'
      });

      if (!confirmed.isConfirmed) return;

      try {
        Swal.fire({
          title: 'Deleting Cron Job',
          html: '<div class="spinner-border text-danger" role="status"><span class="visually-hidden">Deleting...</span></div>',
          allowOutsideClick: false,
          showConfirmButton: false
        });

        const res = await fetch(`/api/cron-jobs/${cronId}`, { method: 'DELETE' });
        const json = await res.json();
        Swal.close();

        if (!res.ok) {
          Swal.fire('Error', json?.error || 'Failed to delete cron job', 'error');
          return;
        }

        Swal.fire('Deleted', 'Cron job deleted successfully', 'success').then(() => {
          window.location.reload();
        });
      } catch (err) {
        Swal.close();
        Swal.fire('Error', err?.message || String(err), 'error');
      }
    });
  </script>
</body>
</html>
