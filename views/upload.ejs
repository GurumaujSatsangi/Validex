<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Upload - TrueLens</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #ffe600;">
      <div class="container-fluid">
        <a class="navbar-brand fw-bold text-dark" href="/">
          <i class="bi bi-check-circle-fill"></i> TrueLens
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item"><a class="nav-link text-dark" href="/upload">Upload</a></li>
            <li class="nav-item"><a class="nav-link text-dark" href="/providers">Providers</a></li>
            <li class="nav-item"><a class="nav-link text-dark" href="/runs">Runs</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <main class="container mt-5">
      <div class="row">
        <div class="col-md-8 mx-auto">
          <h1 class="mb-4"><i class="bi bi-cloud-arrow-up"></i> Upload Data</h1>
          
          <!-- CSV Upload Section -->
          <div class="card shadow mb-4">
            <div class="card-header bg-primary text-white">
              <h5 class="mb-0"><i class="bi bi-filetype-csv"></i> Upload CSV</h5>
            </div>
            <div class="card-body">
              <form id="uploadForm">
                <div class="mb-3">
                  <label for="csvFile" class="form-label">Select CSV File</label>
                  <input type="file" class="form-control" id="csvFile" name="file" accept=".csv" required />
                  <small class="text-muted">Supported: CSV files with provider data</small>
                </div>
                <button type="submit" class="btn btn-primary w-100">
                  <i class="bi bi-upload"></i> Upload & Import
                </button>
              </form>
              <div id="uploadResult" class="mt-3"></div>
            </div>
          </div>

          <!-- PDF Upload Section -->
          <div class="card shadow">
            <div class="card-header bg-info text-white">
              <h5 class="mb-0"><i class="bi bi-file-pdf"></i> Upload Scanned PDF</h5>
            </div>
            <div class="card-body">
              <form id="uploadPdfForm">
                <div class="mb-3">
                  <label for="pdfFile" class="form-label">Select PDF File</label>
                  <input type="file" class="form-control" id="pdfFile" name="file" accept=".pdf" required />
                  <small class="text-muted">Supported: PDF files with scanned provider lists (OCR will be applied)</small>
                </div>
                <button type="submit" class="btn btn-info w-100">
                  <i class="bi bi-upload"></i> Upload & Extract via OCR
                </button>
              </form>
              <div id="uploadPdfResult" class="mt-3"></div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/upload.js"></script>
  </body>
</html>
