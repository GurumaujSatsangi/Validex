<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Upload - TrueLens</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.min.css" rel="stylesheet">
  <link href="/css/dashboard.css" rel="stylesheet">
</head>
<body>
  <div class="dashboard-layout">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <a href="/" class="sidebar-logo">
          <i class="bi bi-check-circle-fill"></i>
          <span>TrueLens</span>
        </a>
      </div>
      <nav class="sidebar-nav">
        <div class="nav-section">
          <div class="nav-section-title">Main</div>
          <a href="/" class="nav-item">
            <i class="bi bi-grid-fill"></i>
            <span>Dashboard</span>
          </a>
          <a href="/upload" class="nav-item active">
            <i class="bi bi-cloud-arrow-up"></i>
            <span>Upload</span>
          </a>
        </div>
        <div class="nav-section">
          <div class="nav-section-title">Data</div>
          <a href="/providers" class="nav-item">
            <i class="bi bi-people-fill"></i>
            <span>Providers</span>
          </a>
          <a href="/runs" class="nav-item">
            <i class="bi bi-play-circle-fill"></i>
            <span>Validation Runs</span>
          </a>
        </div>
      </nav>
    </aside>

    <!-- Main Content -->
    <div class="main-content">
      <!-- Top Bar -->
      <div class="topbar">
        <div class="topbar-left">
          <div>
            <div class="topbar-title">Upload Providers</div>
            <div class="topbar-subtitle">Import data from CSV, PDF, or NPI Registry</div>
          </div>
        </div>
        <div class="topbar-right">
          <div class="topbar-time">
            <i class="bi bi-clock"></i> <span id="currentTime"></span>
          </div>
        </div>
      </div>

      <!-- Content Area -->
      <div class="content-area">
        <div class="upload-grid">
          <!-- CSV Upload Card -->
          <div class="upload-card">
            <div class="upload-icon">
              <i class="bi bi-filetype-csv"></i>
            </div>
            <div class="upload-title">Upload CSV</div>
            <div class="upload-description">Import multiple providers from a CSV file with pre-formatted data.</div>
            <form id="uploadForm">
              <div class="form-group">
                <label for="csvFile">Select CSV File</label>
                <input type="file" class="form-control" id="csvFile" name="file" accept=".csv" required />
              </div>
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-upload"></i> Upload CSV
              </button>
            </form>
            <div id="uploadResult"></div>
          </div>

          <!-- PDF Upload Card -->
          <div class="upload-card">
            <div class="upload-icon">
              <i class="bi bi-file-pdf"></i>
            </div>
            <div class="upload-title">Upload PDF</div>
            <div class="upload-description">Extract providers from scanned PDF documents using OCR technology.</div>
            <form id="uploadPdfForm">
              <div class="form-group">
                <label for="pdfFile">Select PDF File</label>
                <input type="file" class="form-control" id="pdfFile" name="file" accept=".pdf" required />
              </div>
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-upload"></i> Upload PDF
              </button>
            </form>
            <div id="uploadPdfResult"></div>
          </div>

          <!-- Add by NPI Card -->
          <div class="upload-card">
            <div class="upload-icon">
              <i class="bi bi-person-plus-fill"></i>
            </div>
            <div class="upload-title">Add by NPI</div>
            <div class="upload-description">Fetch and validate a single provider using their 10-digit NPI number.</div>
            <form id="addNpiForm">
              <div class="form-group">
                <label for="npiInput">NPI Number</label>
                <input 
                  type="text" 
                  class="form-control" 
                  id="npiInput" 
                  placeholder="1234567890" 
                  maxlength="10"
                  pattern="[0-9]{10}"
                  style="font-family: 'Courier New', monospace; letter-spacing: 2px; text-align: center;"
                  required
                />
              </div>
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i> Fetch Provider
              </button>
            </form>
            <div id="npiResult"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/js/upload.js"></script>
  <script>
    // Update time
    function updateTime() {
      const now = new Date();
      const timeStr = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
      document.getElementById('currentTime').textContent = timeStr;
    }
    updateTime();
    setInterval(updateTime, 60000);
  </script>
</body>
</html>
