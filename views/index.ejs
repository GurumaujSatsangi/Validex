<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - TrueLens</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.min.css" rel="stylesheet">
  <link href="/css/dashboard.css" rel="stylesheet">
</head>
<body>
  <div class="dashboard-layout">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <a href="/" class="sidebar-logo">
          <i class="bi bi-check-circle-fill"></i>
          <span>TrueLens</span>
        </a>
      </div>
      <nav class="sidebar-nav">
        <div class="nav-section">
          <div class="nav-section-title">Main</div>
          <a href="/" class="nav-item active">
            <i class="bi bi-grid-fill"></i>
            <span>Dashboard</span>
          </a>
          <a href="/upload" class="nav-item">
            <i class="bi bi-cloud-arrow-up"></i>
            <span>Upload</span>
          </a>
        </div>
        <div class="nav-section">
          <div class="nav-section-title">Data</div>
          <a href="/providers" class="nav-item">
            <i class="bi bi-people-fill"></i>
            <span>Providers</span>
          </a>
          <a href="/runs" class="nav-item">
            <i class="bi bi-play-circle-fill"></i>
            <span>Validation Runs</span>
          </a>
        </div>
      </nav>
    </aside>

    <!-- Main Content -->
    <div class="main-content">
      <!-- Top Bar -->
      <div class="topbar">
        <div class="topbar-left">
          <div>
            <div class="topbar-title">Dashboard</div>
            <div class="topbar-subtitle">Provider Directory Validation System</div>
          </div>
        </div>
        <div class="topbar-right">
          <div class="topbar-time">
            <i class="bi bi-clock"></i> <span id="currentTime"></span>
          </div>
        </div>
      </div>

      <!-- Content Area -->
      <div class="content-area">
        <!-- Metrics Grid -->
        <div class="metrics-grid">
          <div class="metric-card">
            <div class="metric-header">
              <div class="metric-label">Total Providers</div>
              <div class="metric-icon">
                <i class="bi bi-people-fill"></i>
              </div>
            </div>
            <div class="metric-value" id="totalProviders">-</div>
            <div class="metric-change">
              <i class="bi bi-arrow-up"></i> Loading...
            </div>
          </div>

          <div class="metric-card success">
            <div class="metric-header">
              <div class="metric-label">Validated</div>
              <div class="metric-icon">
                <i class="bi bi-check-circle-fill"></i>
              </div>
            </div>
            <div class="metric-value" id="validatedCount">-</div>
            <div class="metric-change">
              <i class="bi bi-arrow-up"></i> Active
            </div>
          </div>

          <div class="metric-card warning">
            <div class="metric-header">
              <div class="metric-label">Needs Review</div>
              <div class="metric-icon">
                <i class="bi bi-exclamation-triangle-fill"></i>
              </div>
            </div>
            <div class="metric-value" id="needsReviewCount">-</div>
            <div class="metric-change">
              <i class="bi bi-dash"></i> Pending
            </div>
          </div>

          <div class="metric-card">
            <div class="metric-header">
              <div class="metric-label">Validation Runs</div>
              <div class="metric-icon">
                <i class="bi bi-play-circle-fill"></i>
              </div>
            </div>
            <div class="metric-value" id="totalRuns">-</div>
            <div class="metric-change">
              <i class="bi bi-arrow-up"></i> All time
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="card mb-4">
          <div class="card-header">
            <div class="card-title">
              <i class="bi bi-lightning-fill"></i>
              Quick Actions
            </div>
          </div>
          <div class="card-body">
            <div class="upload-grid">
              <div class="upload-card" onclick="window.location.href='/upload'">
                <div class="upload-icon">
                  <i class="bi bi-filetype-csv"></i>
                </div>
                <div class="upload-title">Upload CSV</div>
                <div class="upload-description">Import provider data from CSV files</div>
                <button class="btn btn-primary">Select CSV File</button>
              </div>

              <div class="upload-card" onclick="window.location.href='/upload'">
                <div class="upload-icon">
                  <i class="bi bi-file-pdf"></i>
                </div>
                <div class="upload-title">Upload PDF</div>
                <div class="upload-description">Extract data from scanned documents</div>
                <button class="btn btn-primary">Select PDF File</button>
              </div>

              <div class="upload-card" onclick="window.location.href='/upload'">
                <div class="upload-icon">
                  <i class="bi bi-person-plus-fill"></i>
                </div>
                <div class="upload-title">Add by NPI</div>
                <div class="upload-description">Fetch provider using NPI number</div>
                <button class="btn btn-primary">Enter NPI</button>
              </div>
            </div>
          </div>
        </div>

        <!-- Recent Activity -->
        <div class="card">
          <div class="card-header">
            <div class="card-title">
              <i class="bi bi-clock-history"></i>
              Recent Validation Runs
            </div>
            <div class="card-actions">
              <a href="/runs" class="btn btn-secondary btn-sm">View All</a>
            </div>
          </div>
          <div class="card-body">
            <div id="recentRuns">
              <div class="text-center">
                <div class="spinner"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    // Update time
    function updateTime() {
      const now = new Date();
      const timeStr = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
      document.getElementById('currentTime').textContent = timeStr;
    }
    updateTime();
    setInterval(updateTime, 60000);

    // Load dashboard metrics
    async function loadDashboardMetrics() {
      try {
        const [providersRes, runsRes] = await Promise.all([
          fetch('/api/providers'),
          fetch('/api/validation-runs')
        ]);
        
        const providersData = await providersRes.json();
        const runsData = await runsRes.json();
        
        const providers = providersData.providers || [];
        const runs = runsData.runs || [];
        
        document.getElementById('totalProviders').textContent = providers.length;
        document.getElementById('totalRuns').textContent = runs.length;
        
        // Calculate needs review
        let needsReview = 0;
        runs.forEach(run => {
          needsReview += run.needs_review_count || 0;
        });
        
        document.getElementById('validatedCount').textContent = providers.length - needsReview;
        document.getElementById('needsReviewCount').textContent = needsReview;
        
        // Update metric change text
        document.querySelectorAll('.metric-change').forEach((el, index) => {
          if (index === 0) el.innerHTML = '<i class="bi bi-database"></i> All providers';
          if (index === 1) el.innerHTML = '<i class="bi bi-check-circle"></i> Active';
          if (index === 2) el.innerHTML = '<i class="bi bi-exclamation-circle"></i> Pending';
          if (index === 3) el.innerHTML = '<i class="bi bi-clock-history"></i> All time';
        });
        
        // Display recent runs
        displayRecentRuns(runs.slice(0, 5));
      } catch (err) {
        console.error('Error loading dashboard:', err);
      }
    }

    function displayRecentRuns(runs) {
      const container = document.getElementById('recentRuns');
      
      if (!runs || runs.length === 0) {
        container.innerHTML = '<div class="empty-state"><div class="empty-icon"><i class="bi bi-inbox"></i></div><div class="empty-title">No validation runs yet</div><div class="empty-text">Upload providers to start validation</div></div>';
        return;
      }
      
      const html = `
        <table>
          <thead>
            <tr>
              <th>Run ID</th>
              <th>Started</th>
              <th>Providers</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            ${runs.map(run => `
              <tr>
                <td><code>${run.id.substring(0, 8)}...</code></td>
                <td>${new Date(run.started_at).toLocaleString()}</td>
                <td><span class="badge badge-info">${run.total_providers || 0}</span></td>
                <td>
                  ${run.completed_at ? '<span class="badge badge-success">Completed</span>' : '<span class="badge badge-warning">Running</span>'}
                </td>
                <td>
                  <a href="/runs" class="btn btn-secondary btn-sm">View</a>
                </td>
              </tr>
            `).join('')}
          </tbody>
        </table>
      `;
      
      container.innerHTML = html;
    }

    loadDashboardMetrics();
  </script>
</body>
</html>
