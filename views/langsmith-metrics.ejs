<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LangSmith Metrics - Validation Runs</title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: #f5f5f5;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            padding: 30px;
        }

        h1 {
            color: #333;
            margin-bottom: 30px;
            font-size: 28px;
        }

        .controls {
            margin-bottom: 30px;
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .control-group {
            display: flex;
            flex-direction: column;
        }

        label {
            font-weight: 600;
            margin-bottom: 8px;
            color: #555;
            font-size: 14px;
        }

        select, input {
            padding: 10px 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 14px;
            min-width: 250px;
        }

        select:focus, input:focus {
            outline: none;
            border-color: #4CAF50;
            box-shadow: 0 0 4px rgba(76, 175, 80, 0.3);
        }

        button {
            padding: 10px 20px;
            background: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: 600;
            font-size: 14px;
            align-self: flex-end;
            transition: background 0.3s;
        }

        button:hover {
            background: #45a049;
        }

        button:disabled {
            background: #ccc;
            cursor: not-allowed;
        }

        .info-section {
            background: #f9f9f9;
            padding: 15px;
            border-radius: 4px;
            margin-bottom: 25px;
            border-left: 4px solid #4CAF50;
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
        }

        .info-item {
            display: flex;
            flex-direction: column;
        }

        .info-label {
            font-size: 12px;
            color: #888;
            text-transform: uppercase;
            font-weight: 600;
            margin-bottom: 4px;
        }

        .info-value {
            font-size: 16px;
            color: #333;
            font-weight: 500;
        }

        .metrics-container {
            margin-top: 30px;
        }

        .metrics-title {
            font-size: 20px;
            font-weight: 600;
            color: #333;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 2px solid #eee;
        }

        .runs-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        .runs-table thead {
            background: #f5f5f5;
        }

        .runs-table th {
            padding: 12px;
            text-align: left;
            font-weight: 600;
            color: #555;
            border-bottom: 2px solid #ddd;
            font-size: 13px;
        }

        .runs-table td {
            padding: 12px;
            border-bottom: 1px solid #eee;
            font-size: 14px;
        }

        .runs-table tbody tr:hover {
            background: #fafafa;
        }

        .status-badge {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 3px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
        }

        .status-success {
            background: #d4edda;
            color: #155724;
        }

        .status-pending {
            background: #fff3cd;
            color: #856404;
        }

        .status-error {
            background: #f8d7da;
            color: #721c24;
        }

        .latency {
            font-weight: 600;
            color: #4CAF50;
        }

        .latency.high {
            color: #FF9800;
        }

        .latency.very-high {
            color: #f44336;
        }

        .timestamp {
            color: #888;
            font-size: 12px;
        }

        .no-data {
            text-align: center;
            padding: 40px;
            color: #999;
        }

        .back-link {
            display: inline-block;
            margin-bottom: 20px;
            color: #4CAF50;
            text-decoration: none;
            font-weight: 500;
        }

        .back-link:hover {
            text-decoration: underline;
        }

        .error-message {
            background: #f8d7da;
            color: #721c24;
            padding: 12px;
            border-radius: 4px;
            margin-bottom: 20px;
            display: none;
        }

        .error-message.show {
            display: block;
        }

        .loading {
            text-align: center;
            padding: 40px;
            color: #666;
        }

        .spinner {
            border: 3px solid #f3f3f3;
            border-top: 3px solid #4CAF50;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            animation: spin 1s linear infinite;
            margin: 20px auto;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/runs" class="back-link">‚Üê Back to Validation Runs</a>
        
        <h1>LangSmith Metrics</h1>
        
        <div class="error-message" id="errorMessage"></div>

        <div class="controls">
            <div class="control-group">
                <label for="validationRunSelect">Select Validation Run</label>
                <select id="validationRunSelect">
                    <option value="">Loading validation runs...</option>
                </select>
            </div>
            <button id="loadMetricsBtn">Load Metrics</button>
        </div>

        <!-- Validation Run Info Section -->
        <div id="infoSection" class="info-section" style="display: none;">
            <div class="info-grid">
                <div class="info-item">
                    <span class="info-label">Total Providers</span>
                    <span class="info-value" id="totalProvider">-</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Processed</span>
                    <span class="info-value" id="processedCount">-</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Success Count</span>
                    <span class="info-value" id="successCount">-</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Needs Review</span>
                    <span class="info-value" id="needsReviewCount">-</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Started</span>
                    <span class="info-value timestamp" id="startedTime">-</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Completed</span>
                    <span class="info-value timestamp" id="completedTime">-</span>
                </div>
            </div>
        </div>

        <!-- LangSmith Metrics Section -->
        <div id="metricsSection" class="metrics-container" style="display: none;">
            <div class="metrics-title">LangSmith Run Metrics</div>
            
            <table class="runs-table" id="metricsTable">
                <thead>
                    <tr>
                        <th>Run ID</th>
                        <th>Name</th>
                        <th>Provider ID</th>
                        <th>Provider Name</th>
                        <th>Status</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                        <th>Latency</th>
                        <th>Run Type</th>
                    </tr>
                </thead>
                <tbody id="metricsTableBody">
                </tbody>
            </table>
            
            <div id="noDataMessage" class="no-data" style="display: none;">
                No LangSmith runs found for this validation run.
            </div>
        </div>
    </div>

    <script>
        // Load validation runs on page load
        async function loadValidationRuns() {
            try {
                const response = await fetch('/api/validation-runs/');
                const data = await response.json();
                
                const select = document.getElementById('validationRunSelect');
                select.innerHTML = '<option value="">Select a validation run...</option>';
                
                if (data.runs && data.runs.length > 0) {
                    data.runs.forEach(run => {
                        const option = document.createElement('option');
                        const startDate = new Date(run.started_at).toLocaleDateString();
                        option.value = run.id;
                        option.textContent = `Run ${run.id.substring(0, 8)} - ${startDate} (${run.processed || 0}/${run.total_providers} providers)`;
                        select.appendChild(option);
                    });
                } else {
                    select.innerHTML = '<option value="">No validation runs found</option>';
                }
            } catch (err) {
                showError('Failed to load validation runs: ' + err.message);
                const select = document.getElementById('validationRunSelect');
                select.innerHTML = '<option value="">Error loading runs</option>';
            }
        }

        // Load metrics for selected validation run
        async function loadMetrics() {
            const runId = document.getElementById('validationRunSelect').value;
            
            if (!runId) {
                showError('Please select a validation run');
                return;
            }

            try {
                showLoading(true);
                
                console.log('Loading metrics for run:', runId);
                const response = await fetch(`/api/validation-runs/langsmith-metrics/${runId}`);
                
                if (!response.ok) {
                    const errorData = await response.json();
                    throw new Error(errorData.error || 'Failed to fetch metrics');
                }
                
                const data = await response.json();
                console.log('Metrics data received:', data);
                
                // Display validation run info
                displayValidationRunInfo(data.run);
                
                // Display LangSmith metrics
                displayLangSmithMetrics(data.langsmithRuns, data.providerCount);
                
                hideLoading();
            } catch (err) {
                hideLoading();
                console.error('Error:', err);
                showError('Failed to load metrics: ' + err.message);
            }
        }

        function displayValidationRunInfo(run) {
            document.getElementById('infoSection').style.display = 'block';
            document.getElementById('totalProvider').textContent = run.total_providers || 0;
            document.getElementById('processedCount').textContent = run.processed || 0;
            document.getElementById('successCount').textContent = run.success_count || 0;
            document.getElementById('needsReviewCount').textContent = run.needs_review_count || 0;
            document.getElementById('startedTime').textContent = new Date(run.started_at).toLocaleString();
            document.getElementById('completedTime').textContent = run.completed_at ? new Date(run.completed_at).toLocaleString() : 'In Progress';
        }

        function displayLangSmithMetrics(runs, providerCount) {
            const tbody = document.getElementById('metricsTableBody');
            const noDataMsg = document.getElementById('noDataMessage');
            const metricsSection = document.getElementById('metricsSection');
            
            metricsSection.style.display = 'block';
            
            if (!runs || runs.length === 0) {
                noDataMsg.textContent = `No LangSmith runs found for this validation run (checked ${providerCount || 0} providers). Make sure LANGSMITH_API_KEY is configured and providers have been validated.`;
                noDataMsg.style.display = 'block';
                tbody.innerHTML = '';
                console.log('No runs found.');
                return;
            }
            
            noDataMsg.style.display = 'none';
            tbody.innerHTML = '';
            
            console.log(`Displaying ${runs.length} runs from ${providerCount || 0} providers`);
            
            runs.forEach((run, index) => {
                const row = document.createElement('tr');
                
                const statusClass = run.status === 'success' ? 'status-success' : 
                                   run.status === 'error' ? 'status-error' : 'status-pending';
                
                let latencyClass = 'latency';
                if (run.latency_ms) {
                    if (run.latency_ms > 60000) latencyClass += ' very-high';
                    else if (run.latency_ms > 30000) latencyClass += ' high';
                }
                
                row.innerHTML = `
                    <td><code>${run.id.substring(0, 12)}...</code></td>
                    <td>${run.name}</td>
                    <td><code style="font-size: 11px;">${run.provider_id ? run.provider_id.substring(0, 12) + '...' : '-'}</code></td>
                    <td>${run.provider_name || '-'}</td>
                    <td><span class="status-badge ${statusClass}">${run.status || 'unknown'}</span></td>
                    <td class="timestamp">${run.start_time ? new Date(run.start_time).toLocaleString() : '-'}</td>
                    <td class="timestamp">${run.end_time ? new Date(run.end_time).toLocaleString() : '-'}</td>
                    <td><span class="${latencyClass}">${run.latency_ms ? (run.latency_ms / 1000).toFixed(2) + 's' : '-'}</span></td>
                    <td>${run.run_type}</td>
                `;
                
                tbody.appendChild(row);
            });
        }

        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            errorDiv.textContent = message;
            errorDiv.classList.add('show');
            console.error('Error shown:', message);
            setTimeout(() => {
                errorDiv.classList.remove('show');
            }, 5000);
        }

        function showLoading(isVisible = true) {
            const tbody = document.getElementById('metricsTableBody');
            if (isVisible) {
                tbody.innerHTML = '<tr><td colspan="9" class="loading"><div class="spinner"></div>Loading metrics... This may take a moment while we fetch from LangSmith.</td></tr>';
            }
        }

        function hideLoading() {
            // Loading will be replaced with actual content
        }

        // Event listeners
        document.getElementById('loadMetricsBtn').addEventListener('click', loadMetrics);
        document.getElementById('validationRunSelect').addEventListener('change', () => {
            document.getElementById('errorMessage').classList.remove('show');
        });

        // Load validation runs on page load
        loadValidationRuns();
    </script>
</body>
</html>
